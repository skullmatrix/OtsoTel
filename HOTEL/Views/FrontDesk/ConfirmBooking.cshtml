@model HotelWebsite.Models.Booking
@{
    ViewData["Title"] = "Confirm Booking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Confirm Booking #@Model.Id</h1>
        <a href="@Url.Action("PendingBookings", "FrontDesk")" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left me-2"></i> Back to Pending Bookings
        </a>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white">
            <h5 class="mb-0">Booking Details</h5>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h6 class="text-muted mb-2">Guest Information</h6>
                    <h5>@Model.User.FullName</h5>
                    <p class="mb-1">
                        <i class="fas fa-envelope text-primary me-2"></i> @Model.User.Email
                    </p>
                    @if (!string.IsNullOrEmpty(Model.User.PhoneNumber))
                    {
                        <p class="mb-1">
                            <i class="fas fa-phone text-primary me-2"></i> @Model.User.PhoneNumber
                        </p>
                    }
                </div>
                <div class="col-md-6">
                    <h6 class="text-muted mb-2">Room Information</h6>
                    <h5>@Model.Room.Type Room - @Model.Room.RoomNumber</h5>
                    <p class="mb-1">
                        <i class="fas fa-users text-primary me-2"></i> @Model.NumberOfGuests Guest(s)
                    </p>
                    <p class="mb-1">
                        <i class="fas fa-dollar-sign text-primary me-2"></i> $@Model.Room.Price per night
                    </p>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <h6 class="text-muted mb-2">Check-in/Check-out</h6>
                    <div class="d-flex align-items-center mb-2">
                        <div class="bg-success bg-opacity-10 rounded-circle p-2 me-3">
                            <i class="fas fa-calendar-check text-success"></i>
                        </div>
                        <div>
                            <p class="small text-muted mb-0">Check-in</p>
                            <p class="mb-0 fw-bold">@Model.CheckInDate.ToString("dddd, MMMM dd, yyyy")</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="bg-danger bg-opacity-10 rounded-circle p-2 me-3">
                            <i class="fas fa-calendar-times text-danger"></i>
                        </div>
                        <div>
                            <p class="small text-muted mb-0">Check-out</p>
                            <p class="mb-0 fw-bold">@Model.CheckOutDate.ToString("dddd, MMMM dd, yyyy")</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <h6 class="text-muted mb-2">Payment Information</h6>
                    @foreach (var payment in Model.Payments)
                    {
                        <div class="mb-2">
                            <p class="mb-0">
                                <span class="badge bg-primary">@payment.PaymentMethod</span>
                                <span class="ms-2">$@payment.Amount</span>
                            </p>
                            <p class="small text-muted mb-0">
                                @payment.PaymentDate.ToString("MMMM dd, yyyy") | Status: @payment.Status
                            </p>
                            @if (!string.IsNullOrEmpty(payment.Notes))
                            {
                                <p class="small text-muted mb-0">Notes: @payment.Notes</p>
                            }
                        </div>
                    }
                </div>
            </div>

            <form method="post" asp-action="ConfirmBooking" asp-route-id="@Model.Id">
                <div class="mb-3">
                    <label for="confirmationNotes" class="form-label">Confirmation Notes (Optional)</label>
                    <textarea id="confirmationNotes" name="confirmationNotes" class="form-control" rows="3" 
                        placeholder="Add any notes about the payment or booking confirmation..."></textarea>
                </div>

                <div class="alert alert-warning">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle me-3 fs-4"></i>
                        <div>
                            <h6 class="mb-1">Confirm Cash Payment</h6>
                            <p class="mb-0">You are about to confirm that you've received payment for this booking. 
                            This will change the booking status to "Confirmed".</p>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="fas fa-check-circle me-2"></i> Confirm Booking
                    </button>
                    <a href="@Url.Action("PendingBookings", "FrontDesk")" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>