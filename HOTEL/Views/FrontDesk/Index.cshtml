@{
    ViewData["Title"] = "Front Desk Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var currentUser = ViewBag.CurrentUser;

    var checkInsCount = ViewBag.CheckInsCount;
    var alreadyCheckedIn = ViewBag.AlreadyCheckedIn;

    var checkOutsCount = ViewBag.CheckOutsCount;
    var alreadyCheckedOut = ViewBag.AlreadyCheckedOut;

    var availableRoomsCount = ViewBag.AvailableRoomsCount;
    var premiumCount = ViewBag.PremiumCount;
    var standardCount = ViewBag.StandardCount;
}

<div class="container-fluid py-4">
    <h1 class="mb-4">Welcome, @currentUser</h1>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-2 text-center">
                    <div class="rounded-circle bg-success bg-opacity-10 p-3 mx-auto" style="width: 80px; height: 80px;">
                        <i class="fas fa-user text-success" style="font-size: 2rem;"></i>
                    </div>
                </div>
                <div class="col-md-10">
                    <h2 class="h3 mb-1">@currentUser</h2>
                    <span class="badge bg-success rounded-pill">FrontDesk</span>

                    <div class="row mt-4">
                        <div class="col-md-2 col-4">
                            <a href="@Url.Action("Index", "FrontDesk")" class="text-decoration-none text-center d-block">
                                <div class="bg-light rounded p-3 mb-2">
                                    <i class="fas fa-home text-primary"></i>
                                </div>
                                <span class="small">Home</span>
                            </a>
                        </div>
                        <div class="col-md-2 col-4">
                            <a href="@Url.Action("FrontDesk", "CheckInOut")" class="text-decoration-none text-center d-block">
                                <div class="bg-light rounded p-3 mb-2">
                                    <i class="fas fa-exchange-alt text-primary"></i>
                                </div>
                                <span class="small">Check-in/out</span>
                            </a>
                        </div>
                        <div class="col-md-2 col-4">
                            <a href="@Url.Action("Guests", "FrontDesk")" class="text-decoration-none text-center d-block">
                                <div class="bg-light rounded p-3 mb-2">
                                    <i class="fas fa-users text-primary"></i>
                                </div>
                                <span class="small">Guests</span>
                            </a>
                        </div>
                        <div class="col-md-2 col-4">
                            <a href="@Url.Action("RoomStatus", "FrontDesk")" class="text-decoration-none text-center d-block">
                                <div class="bg-light rounded p-3 mb-2">
                                    <i class="fas fa-bed text-primary"></i>
                                </div>
                                <span class="small">Room Status</span>
                            </a>
                        </div>
                        <div class="col-md-2 col-4">
                            <a href="#" class="text-decoration-none text-center d-block">
                                <div class="bg-light rounded p-3 mb-2">
                                    <i class="fas fa-bell text-primary"></i>
                                </div>
                                <span class="small">Notifications</span>
                            </a>
                        </div>
                        <div class="col-md-2 col-4">
                            <a href="#" class="text-decoration-none text-center d-block">
                                <div class="bg-light rounded p-3 mb-2">
                                    <i class="fas fa-cog text-primary"></i>
                                </div>
                                <span class="small">Settings</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-4">
        <ul class="nav nav-tabs" id="dashboardTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="overview-tab" data-bs-toggle="tab" data-bs-target="#overview" type="button" role="tab" aria-controls="overview" aria-selected="true">Overview</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="tasks-tab" data-bs-toggle="tab" data-bs-target="#tasks" type="button" role="tab" aria-controls="tasks" aria-selected="false">Tasks</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="reports-tab" data-bs-toggle="tab" data-bs-target="#reports" type="button" role="tab" aria-controls="reports" aria-selected="false">Reports</button>
            </li>
        </ul>
    </div>

    <div class="tab-content" id="dashboardTabsContent">
        <div class="tab-pane fade show active" id="overview" role="tabpanel" aria-labelledby="overview-tab">
            <div class="row">
                <div class="col-lg-4 mb-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <h3 class="h5 mb-1">Check-ins Today</h3>
                            <p class="text-muted small mb-3">Guests arriving today</p>

                            <h2 class="display-4 fw-bold text-success mb-1">@checkInsCount</h2>
                            <p class="text-muted mb-0">@alreadyCheckedIn already checked in</p>

                            <div class="mt-3">
                                <a href="@Url.Action("FrontDesk", "CheckInOut")" class="btn btn-sm btn-outline-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 mb-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <h3 class="h5 mb-1">Check-outs Today</h3>
                            <p class="text-muted small mb-3">Guests departing today</p>

                            <h2 class="display-4 fw-bold text-primary mb-1">@checkOutsCount</h2>
                            <p class="text-muted mb-0">@alreadyCheckedOut already checked out</p>

                            <div class="mt-3">
                                <a href="@Url.Action("FrontDesk", "CheckInOut")" class="btn btn-sm btn-outline-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 mb-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <h3 class="h5 mb-1">Available Rooms</h3>
                            <p class="text-muted small mb-3">Ready for check-in</p>

                            <h2 class="display-4 fw-bold text-warning mb-1">@availableRoomsCount</h2>
                            <p class="text-muted mb-0">@premiumCount premium, @standardCount standard</p>

                            <div class="mt-3">
                                <a href="@Url.Action("RoomStatus", "FrontDesk")" class="btn btn-sm btn-outline-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-8 mb-4">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Recent Bookings</h5>
                            <a href="@Url.Action("Index", "Booking")" class="btn btn-sm btn-outline-primary">View All</a>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th>Guest</th>
                                            <th>Room</th>
                                            <th>Check-in</th>
                                            <th>Check-out</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var booking in ViewBag.CheckIns)
                                        {
                                            <tr>
                                                <td>@booking.User.FullName</td>
                                                <td>@booking.Room.RoomNumber (@booking.Room.Type)</td>
                                                <td>@booking.CheckInDate.ToString("MMM dd, yyyy")</td>
                                                <td>@booking.CheckOutDate.ToString("MMM dd, yyyy")</td>
                                                <td><span class="badge bg-primary">@booking.Status</span></td>
                                                <td>
                                                    <a href="@Url.Action("CheckIn", "CheckInOut", new { id = booking.Id })" class="btn btn-sm btn-primary">
                                                        <i class="fas fa-check-circle me-1"></i> Check In
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                        @foreach (var booking in ViewBag.CheckOuts)
                                        {
                                            <tr>
                                                <td>@booking.User.FullName</td>
                                                <td>@booking.Room.RoomNumber (@booking.Room.Type)</td>
                                                <td>@booking.CheckInDate.ToString("MMM dd, yyyy")</td>
                                                <td>@booking.CheckOutDate.ToString("MMM dd, yyyy")</td>
                                                <td><span class="badge bg-success">@booking.Status</span></td>
                                                <td>
                                                    <a href="@Url.Action("CheckOut", "CheckInOut", new { id = booking.Id })" class="btn btn-sm btn-warning text-dark">
                                                        <i class="fas fa-sign-out-alt me-1"></i> Check Out
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 mb-4">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white">
                            <h5 class="mb-0">Room Status Summary</h5>
                        </div>
                        <div class="card-body">
                            <canvas id="roomStatusChart" height="200"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="tab-pane fade" id="tasks" role="tabpanel" aria-labelledby="tasks-tab">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Your Tasks</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">Check room 201 for maintenance request</h6>
                                <p class="small text-muted mb-0">Guest reported AC issues</p>
                            </div>
                            <span class="badge bg-warning text-dark">High Priority</span>
                        </div>
                        <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">Review weekend reservations</h6>
                                <p class="small text-muted mb-0">Confirm all bookings for the weekend</p>
                            </div>
                            <span class="badge bg-primary">Normal</span>
                        </div>
                        <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">Prepare monthly occupancy report</h6>
                                <p class="small text-muted mb-0">Due by end of week</p>
                            </div>
                            <span class="badge bg-info">Low Priority</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Add this to the quick links row in FrontDesk/Index.cshtml -->
        <div class="col-md-2 col-4">
            <a href="@Url.Action("PendingBookings", "FrontDesk")" class="text-decoration-none text-center d-block">
                <div class="bg-light rounded p-3 mb-2">
                    <i class="fas fa-money-bill-wave text-primary"></i>
                </div>
                <span class="small">Pending Bookings</span>
            </a>
        </div>

        <div class="tab-pane fade" id="reports" role="tabpanel" aria-labelledby="reports-tab">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Quick Reports</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="card h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-bed text-primary mb-3" style="font-size: 2rem;"></i>
                                    <h5>Room Occupancy</h5>
                                    <p class="text-muted small">View current and upcoming occupancy rates</p>
                                    <a href="#" class="btn btn-sm btn-outline-primary">Generate Report</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-chart-line text-success mb-3" style="font-size: 2rem;"></i>
                                    <h5>Revenue Summary</h5>
                                    <p class="text-muted small">Daily and monthly revenue breakdown</p>
                                    <a href="#" class="btn btn-sm btn-outline-primary">Generate Report</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-user-check text-info mb-3" style="font-size: 2rem;"></i>
                                    <h5>Guest Statistics</h5>
                                    <p class="text-muted small">Review guest demographics and preferences</p>
                                    <a href="#" class="btn btn-sm btn-outline-primary">Generate Report</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Room Status Chart
            const roomStatusCtx = document.getElementById('roomStatusChart').getContext('2d');
            const roomStatusChart = new Chart(roomStatusCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Vacant', 'Occupied', 'Maintenance'],
                    datasets: [{
                        data: [@ViewBag.VacantRooms, @ViewBag.OccupiedRooms, @ViewBag.MaintenanceRooms],
                        backgroundColor: ['#198754', '#0d6efd', '#ffc107'],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });                     
        });
    </script>
}