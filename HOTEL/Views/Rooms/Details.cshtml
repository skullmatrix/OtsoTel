                            <div class="p-3 text-center bg-light rounded shadow-sm h-100">
                                <i class="fas fa-user-friends fs-1 text-primary mb-3"></i>
                                <h4 class="fs-5">@Model.Capacity Guests</h4>
                            </div>
                        </div>
                    </div>

                    <!-- Room Policies -->
                    <h3 class="fw-bold mb-3">Room Policies</h3>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-2"><i class="fas fa-clock text-primary me-2"></i> Check-in: 2:00 PM</li>
                                <li class="mb-2"><i class="fas fa-clock text-primary me-2"></i> Check-out: 12:00 PM</li>
                                <li class="mb-2"><i class="fas fa-smoking-ban text-primary me-2"></i> Non-smoking</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-2"><i class="fas fa-paw text-primary me-2"></i> No pets allowed</li>
                                <li class="mb-2"><i class="fas fa-credit-card text-primary me-2"></i> Credit card required</li>
                                <li class="mb-2"><i class="fas fa-calendar-alt text-primary me-2"></i> 24-hour cancellation</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Booking Form Card -->
            <div class="card border-0 shadow mb-4" id="booking-section">
                <div class="card-header bg-primary text-white p-3">
                    <h3 class="card-title fw-bold mb-0">Book this room</h3>
                </div>
                <div class="card-body p-4">
                    <form action="@Url.Action("Create", "Booking")" method="get">
                        <input type="hidden" name="roomId" value="@Model.Id" />

                        <div class="mb-3">
                            <label for="checkInDate" class="form-label">Check-in Date</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-calendar-alt text-primary"></i></span>
                                <input type="date" class="form-control" id="checkInDate" name="checkInDate" 
                                       value="@DateTime.Now.ToString("yyyy-MM-dd")" min="@DateTime.Now.ToString("yyyy-MM-dd")" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="checkOutDate" class="form-label">Check-out Date</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-calendar-alt text-primary"></i></span>
                                <input type="date" class="form-control" id="checkOutDate" name="checkOutDate" 
                                       value="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="guests" class="form-label">Number of Guests</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-user-friends text-primary"></i></span>
                                <select class="form-select" id="guests" name="guests">
                                    @for (int i = 1; i <= Model.Capacity; i++)
                                    {
                                        <option value="@i">@i</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="booking-summary bg-light p-3 rounded mb-3">
                            <h5 class="fw-bold mb-3">Booking Summary</h5>
                            <div class="d-flex justify-content-between mb-2">
                                <span>$@Model.Price.ToString("0.00") x <span id="nightsCount">1</span> night(s)</span>
                                <span id="totalPrice">$@Model.Price.ToString("0.00")</span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between fw-bold">
                                <span>Total</span>
                                <span id="finalTotal">$@Model.Price.ToString("0.00")</span>
                            </div>
                        </div>

                        <div class="d-grid">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <button type="submit" class="btn btn-primary btn-lg">Book Now</button>
                            }
                            else
                            {
                                <button type="button" class="btn btn-primary btn-lg book-now-btn" data-bs-toggle="modal" data-bs-target="#loginModal">Book Now</button>
                            }
                        </div>
                    </form>
                </div>
            </div>

            <!-- Why Book With Us Card -->
            <div class="card border-0 shadow">
                <div class="card-header bg-success text-white p-3">
                    <h3 class="card-title fw-bold mb-0">Why Book with Us?</h3>
                </div>
                <div class="card-body p-4">
                    <ul class="list-unstyled">
                        <li class="mb-3 d-flex">
                            <div class="me-3">
                                <i class="fas fa-check-circle text-success fs-4"></i>
                            </div>
                            <div>
                                <h5 class="mb-1">Best Price Guarantee</h5>
                                <p class="text-muted mb-0">Find a lower price? We'll match it plus give you 10% off.</p>
                            </div>
                        </li>
                        <li class="mb-3 d-flex">
                            <div class="me-3">
                                <i class="fas fa-check-circle text-success fs-4"></i>
                            </div>
                            <div>
                                <h5 class="mb-1">Free Cancellation</h5>
                                <p class="text-muted mb-0">Plans change? No problem. Cancel up to 24 hours before check-in.</p>
                            </div>
                        </li>
                        <li class="mb-3 d-flex">
                            <div class="me-3">
                                <i class="fas fa-check-circle text-success fs-4"></i>
                            </div>
                            <div>
                                <h5 class="mb-1">No Booking Fees</h5>
                                <p class="text-muted mb-0">We don't charge any booking fees. What you see is what you pay.</p>
                            </div>
                        </li>
                        <li class="mb-0 d-flex">
                            <div class="me-3">
                                <i class="fas fa-check-circle text-success fs-4"></i>
                            </div>
                            <div>
                                <h5 class="mb-1">24/7 Customer Service</h5>
                                <p class="text-muted mb-0">Our team is always available to help you with any queries.</p>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Related Rooms Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold mb-3">You May Also Like</h2>
            <p class="text-muted">Explore other room options at The Matrix</p>
        </div>

        <div class="row g-4">
            <!-- We'll show similar rooms based on the current room type -->
            @{
                var relatedRooms = ViewBag.RelatedRooms as IEnumerable<HotelWebsite.Models.Room>;
                if (relatedRooms != null && relatedRooms.Any())
                {
                    foreach (var relatedRoom in relatedRooms.Take(3))
                    {
                        <div class="col-lg-4 col-md-6">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="position-relative">
                                    <img src="@relatedRoom.ImageUrl" class="card-img-top" alt="@relatedRoom.Type Room">
                                    <span class="badge bg-primary position-absolute top-0 end-0 m-3 p-2">@relatedRoom.Type</span>
                                </div>
                                <div class="card-body p-4">
                                    <h5 class="card-title fw-bold">@relatedRoom.Type Room - @relatedRoom.RoomNumber</h5>
                                    <p class="card-text text-muted">@relatedRoom.Description.Substring(0, Math.Min(100, relatedRoom.Description.Length))...</p>

                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="fw-bold text-primary fs-4">$@relatedRoom.Price.ToString("0.00")<small class="text-muted fs-6">/night</small></span>
                                        <span class="badge bg-success p-2">Available</span>
                                    </div>

                                    <div class="d-grid">
                                        <button onclick="handleBookNowClick(@relatedRoom.Id)" class="btn btn-primary">
                                            Book Now
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <!-- Fallback to show generic room options if no related rooms are provided -->
                    <div class="col-lg-4 col-md-6">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="position-relative">
                                <img src="https://images.unsplash.com/photo-1590490360182-c33d57733427?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" class="card-img-top" alt="Deluxe Room">
                                <span class="badge bg-primary position-absolute top-0 end-0 m-3 p-2">Deluxe</span>
                            </div>
                            <div class="card-body p-4">
                                <h5 class="card-title fw-bold">Deluxe Room</h5>
                                <p class="card-text text-muted">Experience enhanced comfort with premium amenities and services.</p>

                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="fw-bold text-primary fs-4">$9,000<small class="text-muted fs-6">/night</small></span>
                                    <span class="badge bg-success p-2">Available</span>
                                </div>

                                <div class="d-grid">
                                    <button onclick="handleBookNowClick(1)" class="btn btn-primary">
                                        Book Now
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="position-relative">
                                <img src="https://images.unsplash.com/photo-1582719478250-c89cae4dc85b?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" class="card-img-top" alt="Premium Suite">
                                <span class="badge bg-primary position-absolute top-0 end-0 m-3 p-2">Premium</span>
                            </div>
                            <div class="card-body p-4">
                                <h5 class="card-title fw-bold">Premium Suite</h5>
                                <p class="card-text text-muted">Our premium suites offer the ultimate luxury experience with all amenities.</p>

                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="fw-bold text-primary fs-4">$12,500<small class="text-muted fs-6">/night</small></span>
                                    <span class="badge bg-success p-2">Available</span>
                                </div>

                                <div class="d-grid">
                                    <button onclick="handleBookNowClick(2)" class="btn btn-primary">
                                        Book Now
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="position-relative">
                                <img src="https://images.unsplash.com/photo-1566665797739-1674de7a421a?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" class="card-img-top" alt="Family Suite">
                                <span class="badge bg-primary position-absolute top-0 end-0 m-3 p-2">Family</span>
                            </div>
