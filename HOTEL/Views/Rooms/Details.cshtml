@model HotelWebsite.Models.Room
@{
    ViewData["Title"] = Model.Type + " Room Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section with Room Image -->
<section class="hero-section position-relative vh-100">
    <!-- Background Image -->
    <div class="position-relative h-100">
        <img src="@Model.ImageUrl" class="d-block w-100 h-100 object-fit-cover" alt="@Model.Type Room">
        <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>
    </div>
    <!-- Hero Content -->
    <div class="position-absolute top-50 start-0 translate-middle-y px-4 px-lg-5 w-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-8 bg-dark bg-opacity-75 p-4 p-md-5 rounded">
                    <h2 class="fs-4 text-white mb-2">THE MATRIX</h2>
                    <h1 class="display-4 fw-bold text-white">@Model.Type Room</h1>
                    <p class="lead mb-4 text-white">Experience luxury in room @Model.RoomNumber</p>
                    <div class="d-flex gap-3">
                        <button onclick="handleBookNowClick(@Model.Id)" class="btn btn-primary">
                            Book Now
                        </button>
                        <a href="@Url.Action("Index", "Rooms")" class="btn btn-outline-light">Back to Rooms</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Room Navigation -->
<section class="booking-section py-4 shadow bg-white">
    <div class="container">
        <div class="row g-3 align-items-center">
            <div class="col-md-4">
                <div class="d-flex align-items-center">
                    <span class="badge bg-primary fs-6 me-2 p-2">@Model.Type</span>
                    <span class="badge bg-success fs-6 me-2 p-2">Available</span>
                    <div class="ms-auto d-md-none">
                        <button onclick="handleBookNowClick(@Model.Id)" class="btn btn-sm btn-primary">
                            Book Now
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-md-4 text-md-center">
                <div class="fw-bold text-primary fs-3">
                    $@Model.Price.ToString("0.00")<small class="text-muted fs-6">/night</small>
                </div>
            </div>
            <div class="col-md-4 text-md-end d-none d-md-block">
                <button onclick="handleBookNowClick(@Model.Id)" class="btn btn-primary">
                    Book Now
                </button>
                <a href="@Url.Action("Index", "Rooms")" class="btn btn-outline-primary ms-2">View All Rooms</a>
            </div>
        </div>
    </div>
</section>

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8">
            <!-- Room Description Card -->
            <div class="card border-0 shadow mb-4">
                <div class="card-body p-4">
                    <h2 class="fw-bold mb-4 border-bottom pb-3">About This Room</h2>
                    <p class="card-text mb-4 fs-5">@Model.Description</p>

                    <!-- Room Gallery -->
                    <div class="room-gallery mb-5">
                        <h3 class="fw-bold mb-3">Room Gallery</h3>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <img src="@Model.ImageUrl" class="img-fluid rounded shadow-sm" alt="@Model.Type Room">
                            </div>
                            <div class="col-md-6">
                                <img src="https://images.unsplash.com/photo-1552902019-ebcd97aa9aa0?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" class="img-fluid rounded shadow-sm" alt="@Model.Type Room Bathroom">
                            </div>
                            <div class="col-md-4">
                                <img src="https://images.unsplash.com/photo-1560185007-5f0bb1866cab?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" class="img-fluid rounded shadow-sm" alt="@Model.Type Room View">
                            </div>
                            <div class="col-md-4">
                                <img src="https://images.unsplash.com/photo-1584132967334-10e028bd69f7?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" class="img-fluid rounded shadow-sm" alt="@Model.Type Room Detail">
                            </div>
                            <div class="col-md-4">
                                <img src="https://images.unsplash.com/photo-1582719478250-c89cae4dc85b?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" class="img-fluid rounded shadow-sm" alt="@Model.Type Room Desk">
                            </div>
                        </div>
                    </div>

                    <!-- Amenities Section -->
                    <h3 class="fw-bold mb-3">Room Amenities</h3>
                    <div class="row g-4 mb-4">
                        <div class="col-md-3 col-6">
                            <div class="p-3 text-center bg-light rounded shadow-sm h-100">
                                <i class="fas fa-wifi fs-1 text-primary mb-3"></i>
                                <h4 class="fs-5">Free Wi-Fi</h4>
                            </div>
                        </div>
                        <div class="col-md-3 col-6">
                            <div class="p-3 text-center bg-light rounded shadow-sm h-100">
                                <i class="fas fa-tv fs-1 text-primary mb-3"></i>
                                <h4 class="fs-5">Smart TV</h4>
                            </div>
                        </div>
                        <div class="col-md-3 col-6">
                            <div class="p-3 text-center bg-light rounded shadow-sm h-100">
                                <i class="fas fa-snowflake fs-1 text-primary mb-3"></i>
                                <h4 class="fs-5">Air Conditioning</h4>
                            </div>
                        </div>
                        <div class="col-md-3 col-6">
                            <div class="p-3 text-center bg-light rounded shadow-sm h-100">
                                <i class="fas fa-coffee fs-1 text-primary mb-3"></i>
