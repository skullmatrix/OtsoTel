@page
@model HOTEL.Views.Rooms.IndexModel
@{
    ViewData["Title"] = "Rooms";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <!-- Ensures this page uses the correct layout -->
}

<h1 class="text-center">Rooms and Suites</h1>
<p class="text-center">The elegant luxury bedrooms in this gallery showcase custom interior designs & decorating ideas.</p>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <img src="~/images/room1.jpg" class="card-img-top" alt="Room Image" asp-append-version="true">
                <div class="card-body">
                    <h5 class="card-title">The Royal Room</h5>
                    <p class="card-text">₦190,000</p>
                    <p>Available: Yes</p>
                    <a href="#" class="btn btn-primary">Book now</a>
                </div>
            </div>
        </div>
    </div>
</div>
