@model HotelWebsite.Models.Booking

@{
    ViewData["Title"] = "Booking Confirmation";
    var nights = (Model.CheckOutDate - Model.CheckInDate).Days;
    var totalPrice = Model.Room?.Price * nights;
}

<div class="container py-5 text-center">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h2 class="mb-0">Booking Confirmed!</h2>
        </div>
        <div class="card-body">
            <i class="fas fa-check-circle fa-5x text-success mb-4"></i>
            <h3>Thank you, @Model.GuestName!</h3>
            <p class="lead">Your booking for @Model.Room?.Type Room has been confirmed.</p>

            <div class="booking-details mt-4">
                <h4>Booking Details</h4>
                <p><strong>Reference:</strong> #@Model.Id</p>
                <p><strong>Room:</strong> @Model.Room?.Type - @Model.Room?.RoomNumber</p>
                <p><strong>Check-In:</strong> @Model.CheckInDate.ToString("d")</p>
                <p><strong>Check-Out:</strong> @Model.CheckOutDate.ToString("d")</p>
                <p><strong>Nights:</strong> @nights</p>
                <p><strong>Total:</strong> $@totalPrice?.ToString("0.00")</p>
                @if (!string.IsNullOrEmpty(Model.SpecialRequests))
                {
                    <p><strong>Requests:</strong> @Model.SpecialRequests</p>
                }
            </div>

            <div class="mt-4">
                <p>Confirmation sent to @Model.GuestEmail</p>
                <a href="/" class="btn btn-primary">Home</a>
                <a href="/Rooms" class="btn btn-outline-success">Book Another</a>
            </div>
        </div>
    </div>
</div>