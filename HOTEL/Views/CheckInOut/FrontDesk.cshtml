@{
    ViewData["Title"] = "Front Desk";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var expectedCheckIns = ViewBag.ExpectedCheckIns as List<HotelWebsite.Models.Booking>;
    var expectedCheckOuts = ViewBag.ExpectedCheckOuts as List<HotelWebsite.Models.Booking>;
    var recentCheckIns = ViewBag.RecentCheckIns as List<HotelWebsite.Models.Booking>;
    var recentCheckOuts = ViewBag.RecentCheckOuts as List<HotelWebsite.Models.Booking>;
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Front Desk</h1>
        <div class="d-flex">
            <a href="@Url.Action("Index", "Rooms")" class="btn btn-outline-primary me-2">
                <i class="fas fa-hotel me-2"></i> View Rooms
            </a>
            <a href="@Url.Action("Index", "Billing")" class="btn btn-outline-success">
                <i class="fas fa-file-invoice-dollar me-2"></i> Billing
            </a>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                            <i class="fas fa-sign-in-alt text-primary fs-4"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 text-muted">Expected Check-ins</h6>
                            <h2 class="mb-0">@expectedCheckIns.Count</h2>
                        </div>
                    </div>
                    <div class="progress bg-light" style="height: 6px;">
                        <div class="progress-bar bg-primary" style="width: @(expectedCheckIns.Count > 0 ? 100 : 0)%"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle bg-warning bg-opacity-10 p-3 me-3">
                            <i class="fas fa-sign-out-alt text-warning fs-4"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 text-muted">Expected Check-outs</h6>
                            <h2 class="mb-0">@expectedCheckOuts.Count</h2>
                        </div>
                    </div>
                    <div class="progress bg-light" style="height: 6px;">
                        <div class="progress-bar bg-warning" style="width: @(expectedCheckOuts.Count > 0 ? 100 : 0)%"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle bg-success bg-opacity-10 p-3 me-3">
                            <i class="fas fa-bed text-success fs-4"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 text-muted">Today's Check-ins</h6>
                            <h2 class="mb-0">@recentCheckIns.Count</h2>
                        </div>
                    </div>
                    <div class="progress bg-light" style="height: 6px;">
                        <div class="progress-bar bg-success" style="width: @(recentCheckIns.Count > 0 ? 100 : 0)%"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle bg-info bg-opacity-10 p-3 me-3">
                            <i class="fas fa-check-circle text-info fs-4"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 text-muted">Today's Check-outs</h6>
                            <h2 class="mb-0">@recentCheckOuts.Count</h2>
                        </div>
                    </div>
                    <div class="progress bg-light" style="height: 6px;">
                        <div class="progress-bar bg-info" style="width: @(recentCheckOuts.Count > 0 ? 100 : 0)%"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Expected Check-ins Today</h5>
                    <span class="badge bg-primary">@expectedCheckIns.Count</span>
                </div>
                <div class="card-body p-0">
                    @if (expectedCheckIns.Count == 0)
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-calendar-check text-muted mb-3" style="font-size: 3rem;"></i>
                            <p class="mb-0">No expected check-ins for today.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Guest</th>
                                        <th>Room</th>
                                        <th>Check-in Time</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var booking in expectedCheckIns)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="@booking.User.Photo" class="rounded-circle me-2" width="35" height="35" alt="Guest Photo" style="object-fit: cover;">
                                                    <div>
                                                        <div class="fw-bold">@booking.User.FullName</div>
                                                        <div class="small text-muted">@booking.User.Email</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="fw-bold">@booking.Room.RoomNumber</span><br>
                                                <span class="small text-muted">@booking.Room.Type</span>
                                            </td>
                                            <td>@booking.CheckInDate.ToString("hh:mm tt")</td>
                                            <td>
                                                <a href="@Url.Action("CheckIn", new { id = booking.Id })" class="btn btn-primary btn-sm">
                                                    <i class="fas fa-sign-in-alt me-1"></i> Check In
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Expected Check-outs Today</h5>
                    <span class="badge bg-warning text-dark">@expectedCheckOuts.Count</span>
                </div>
                <div class="card-body p-0">
                    @if (expectedCheckOuts.Count == 0)
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-calendar-times text-muted mb-3" style="font-size: 3rem;"></i>
                            <p class="mb-0">No expected check-outs for today.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Guest</th>
                                        <th>Room</th>
                                        <th>Check-out Time</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var booking in expectedCheckOuts)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="@booking.User.Photo" class="rounded-circle me-2" width="35" height="35" alt="Guest Photo" style="object-fit: cover;">
                                                    <div>
                                                        <div class="fw-bold">@booking.User.FullName</div>
                                                        <div class="small text-muted">@booking.User.Email</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="fw-bold">@booking.Room.RoomNumber</span><br>
                                                <span class="small text-muted">@booking.Room.Type</span>
                                            </td>
                                            <td>@booking.CheckOutDate.ToString("hh:mm tt")</td>
                                            <td>
                                                <a href="@Url.Action("CheckOut", new { id = booking.Id })" class="btn btn-warning btn-sm text-dark">
                                                    <i class="fas fa-sign-out-alt me-1"></i> Check Out
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Recent Activity</h5>
                    <a href="#" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Activity</th>
                                    <th>Guest</th>
                                    <th>Room</th>
                                    <th>Time</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var booking in recentCheckIns)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <span class="badge bg-success rounded-circle p-2 me-2">
                                                    <i class="fas fa-sign-in-alt"></i>
                                                </span>
                                                <span>Check-in</span>
                                            </div>
                                        </td>
                                        <td>@booking.User.FullName</td>
                                        <td>@booking.Room.RoomNumber (@booking.Room.Type)</td>
                                        <td>@booking.ActualCheckInDate?.ToString("hh:mm tt")</td>
                                        <td><span class="badge bg-success">Completed</span></td>
                                    </tr>
                                }
                                @foreach (var booking in recentCheckOuts)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <span class="badge bg-warning rounded-circle p-2 me-2 text-dark">
                                                    <i class="fas fa-sign-out-alt"></i>
                                                </span>
                                                <span>Check-out</span>
                                            </div>
                                        </td>
                                        <td>@booking.User.FullName</td>
                                        <td>@booking.Room.RoomNumber (@booking.Room.Type)</td>
                                        <td>@booking.ActualCheckOutDate?.ToString("hh:mm tt")</td>
                                        <td><span class="badge bg-info">Completed</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>