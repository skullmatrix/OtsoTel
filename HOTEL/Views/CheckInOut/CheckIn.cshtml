@model HotelWebsite.Models.Booking
@{
    ViewData["Title"] = "Guest Check-in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Guest Check-in</h4>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <img src="@Model.User.Photo" class="rounded-circle me-3" width="60" height="60" alt="Guest Photo" style="object-fit: cover;">
                                <div>
                                    <h5 class="mb-1">@Model.User.FullName</h5>
                                    <p class="mb-0 text-muted">@Model.User.Email</p>
                                </div>
                            </div>
                            <div class="mb-3">
                                <p class="mb-1"><strong>Phone:</strong> @(string.IsNullOrEmpty(Model.User.PhoneNumber) ? "Not provided" : Model.User.PhoneNumber)</p>
                                <p class="mb-1"><strong>Address:</strong> @Model.User.Address</p>
                                <p class="mb-0"><strong>ID:</strong> @(string.IsNullOrEmpty(Model.User.IdNumber) ? "Not provided" : $"{Model.User.IdType}: {Model.User.IdNumber}")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h5 class="border-bottom pb-2 mb-3">Booking Details</h5>
                            <p class="mb-1"><strong>Room:</strong> @Model.Room.Type Room - @Model.Room.RoomNumber</p>
                            <p class="mb-1"><strong>Check-in:</strong> @Model.CheckInDate.ToString("MMM dd, yyyy")</p>
                            <p class="mb-1"><strong>Check-out:</strong> @Model.CheckOutDate.ToString("MMM dd, yyyy")</p>
                            <p class="mb-1"><strong>Nights:</strong> @((Model.CheckOutDate - Model.CheckInDate).Days)</p>
                            <p class="mb-0"><strong>Guests:</strong> @Model.NumberOfGuests person(s)</p>
                        </div>
                    </div>

                    <form asp-action="CheckIn" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />

                        <div class="mb-4">
                            <h5 class="border-bottom pb-2 mb-3">ID Verification</h5>
                            <div class="mb-3">
                                <label for="idVerification" class="form-label">ID Verification</label>
                                <select class="form-select" id="idVerification" name="idVerification" required>
                                    <option value="">Select verification type</option>
                                    <option value="Passport">Passport</option>
                                    <option value="Driver's License">Driver's License</option>
                                    <option value="National ID">National ID</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-4">
                            <h5 class="border-bottom pb-2 mb-3">Payment Information</h5>
                            <p class="mb-1"><strong>Total Amount:</strong> $@Model.TotalPrice</p>
                            <p class="mb-0"><strong>Payment Status:</strong> <span class="badge bg-warning text-dark">Will be charged during check-in</span></p>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="termsCheck" required>
                                <label class="form-check-label" for="termsCheck">
                                    I confirm that the guest's identity has been verified and they've been informed about hotel policies.
                                </label>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("FrontDesk")" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i> Back
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-check-circle me-2"></i> Complete Check-in
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>