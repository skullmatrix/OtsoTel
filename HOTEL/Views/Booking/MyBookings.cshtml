@model IEnumerable<HotelWebsite.Models.Booking>
@{
    ViewData["Title"] = "My Bookings";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    var bookingSuccess = ViewBag.BookingSuccess as bool? ?? false;
    var bookingId = ViewBag.BookingId as int? ?? 0;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">My Bookings</h1>
        <a href="@Url.Action("Index", "Rooms")" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i> Book a Room
        </a>
    </div>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (!Model.Any())
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body p-5 text-center">
                <div class="mb-4">
                    <i class="fas fa-calendar-alt text-primary" style="font-size: 4rem;"></i>
                </div>
                <h3>No Bookings Found</h3>
                <p class="text-muted mb-4">You haven't made any bookings yet. Start booking your stay at The Matrix Hotel!</p>
                <a href="@Url.Action("Index", "Rooms")" class="btn btn-primary">
                    <i class="fas fa-search me-2"></i> Browse Rooms
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-12 mb-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white">
                        <ul class="nav nav-tabs card-header-tabs">
                            <li class="nav-item">
                                <a class="nav-link active" href="#upcoming" data-bs-toggle="tab">Upcoming</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#past" data-bs-toggle="tab">Past</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#cancelled" data-bs-toggle="tab">Cancelled</a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="tab-pane fade show active" id="upcoming">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Booking ID</th>
                                                <th>Room</th>
                                                <th>Check-in</th>
                                                <th>Check-out</th>
                                                <th>Total</th>
                                                <th>Status</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                var upcomingBookings = Model.Where(b => 
                                                    b.Status != "Cancelled" && 
                                                    b.Status != "Checked Out" && 
                                                    b.CheckInDate >= DateTime.Now.Date).ToList();
                                            }
                                            
                                            @if (upcomingBookings.Any())
                                            {
                                                foreach (var booking in upcomingBookings.OrderBy(b => b.CheckInDate))
                                                {
                                                    <tr>
                                                        <td>@booking.Id</td>
                                                        <td>
                                                            <div class="d-flex align-items-center">
                                                                <img src="@booking.Room.ImageUrl" class="rounded me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                                                <div>
                                                                    <span class="fw-bold">@booking.Room.Type</span><br>
                                                                    <span class="small text-muted">Room @booking.Room.RoomNumber</span>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>@booking.CheckInDate.ToString("MMM dd, yyyy")</td>
                                                        <td>@booking.CheckOutDate.ToString("MMM dd, yyyy")</td>
                                                        <td>$@booking.TotalPrice.ToString("0.00")</td>
                                                        <td>
                                                            @if (booking.Status == "Confirmed")
                                                            {
                                                                <span class="badge bg-primary">Confirmed</span>
                                                            }
                                                            else if (booking.Status == "Checked In")
                                                            {
                                                                <span class="badge bg-success">Checked In</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="badge bg-secondary">@booking.Status</span>
                                                            }
                                                        </td>
                                                        <td>
                                                            <div class="btn-group">
                                                                <a href="@Url.Action("Details", new { id = booking.Id })" class="btn btn-sm btn-outline-primary">
                                                                    <i class="fas fa-eye"></i>
                                                                </a>
                                                                @if (booking.Status == "Confirmed" && booking.CheckInDate > DateTime.Now.Date)
                                                                {
                                                                    <a href="@Url.Action("Cancel", new { id = booking.Id })" class="btn btn-sm btn-outline-danger">
                                                                        <i class="fas fa-times"></i>
                                                                    </a>
                                                                }
                                                            </div>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td colspan="7" class="text-center">You don't have any upcoming bookings.</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <div class="tab-pane fade" id="past">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Booking ID</th>
                                                <th>Room</th>
                                                <th>Check-in</th>
                                                <th>Check-out</th>
                                                <th>Total</th>
                                                <th>Status</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                var pastBookings = Model.Where(b =>
                                                b.Status == "Checked Out" ||
                                                (b.Status != "Cancelled" && b.CheckOutDate < DateTime.Now.Date)).ToList();
                                            }

                                            @if (pastBookings.Any())
                                            {
                                                foreach (var booking in pastBookings.OrderByDescending(b => b.CheckOutDate))
                                                {
                                                    <tr>
                                                        <td>@booking.Id</td>
                                                        <td>
                                                            <div class="d-flex align-items-center">
                                                                <img src="@booking.Room.ImageUrl" class="rounded me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                                                <div>
                                                                    <span class="fw-bold">@booking.Room.Type</span><br>
                                                                    <span class="small text-muted">Room @booking.Room.RoomNumber</span>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>@booking.CheckInDate.ToString("MMM dd, yyyy")</td>
                                                        <td>@booking.CheckOutDate.ToString("MMM dd, yyyy")</td>
                                                        <td>$@booking.TotalPrice.ToString("0.00")</td>
                                                        <td>
                                                            @if (booking.Status == "Checked Out")
                                                            {
                                                                <span class="badge bg-secondary">Checked Out</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="badge bg-warning text-dark">@booking.Status</span>
                                                            }
                                                        </td>
                                                        <td>
                                                            <a href="@Url.Action("Details", new { id = booking.Id })" class="btn btn-sm btn-outline-primary">
                                                                <i class="fas fa-eye"></i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td colspan="7" class="text-center">You don't have any past bookings.</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <div class="tab-pane fade" id="cancelled">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Booking ID</th>
                                                <th>Room</th>
                                                <th>Check-in</th>
                                                <th>Check-out</th>
                                                <th>Total</th>
                                                <th>Status</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                var cancelledBookings = Model.Where(b => b.Status == "Cancelled").ToList();
                                            }

                                            @if (cancelledBookings.Any())
                                            {
                                                foreach (var booking in cancelledBookings.OrderByDescending(b => b.BookingDate))
                                                {
                                                    <tr>
                                                        <td>@booking.Id</td>
                                                        <td>
                                                            <div class="d-flex align-items-center">
                                                                <img src="@booking.Room.ImageUrl" class="rounded me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                                                <div>
                                                                    <span class="fw-bold">@booking.Room.Type</span><br>
                                                                    <span class="small text-muted">Room @booking.Room.RoomNumber</span>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>@booking.CheckInDate.ToString("MMM dd, yyyy")</td>
                                                        <td>@booking.CheckOutDate.ToString("MMM dd, yyyy")</td>
                                                        <td>$@booking.TotalPrice.ToString("0.00")</td>
                                                        <td><span class="badge bg-danger">Cancelled</span></td>
                                                        <td>
                                                            <a href="@Url.Action("Details", new { id = booking.Id })" class="btn btn-sm btn-outline-primary">
                                                                <i class="fas fa-eye"></i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td colspan="7" class="text-center">You don't have any cancelled bookings.</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Booking Success Modal -->
<div class="modal fade" id="bookingSuccessModal" tabindex="-1" aria-labelledby="bookingSuccessModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center p-4">
                <div class="mb-4">
                    <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
                </div>
                <h3 class="modal-title mb-3" id="bookingSuccessModalLabel">Booking Confirmed!</h3>
                <p class="mb-4">Thank you for booking with us. Your reservation has been confirmed and we're looking forward to welcoming you to The Matrix Hotel.</p>
                <p class="mb-0 fw-bold">Booking ID: @ViewBag.BookingId</p>
            </div>
            <div class="modal-footer border-0 justify-content-center pb-4">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="bookingSuccessModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center p-4">
                <div class="mb-4">
                    <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
                </div>
                <h3 class="mb-3">Thank You for Staying With Us!</h3>
                <p class="mb-4">Your booking has been confirmed. We look forward to welcoming you!</p>
                <p class="mb-0 fw-bold">Booking ID: @TempData["BookingId"]</p>
            </div>
            <div class="modal-footer border-0 justify-content-center">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Show booking success modal if applicable
        @if (ViewBag.BookingSuccess == true)
        {
            <div class="modal fade" id="bookingSuccessModal" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header bg-success text-white">
                            <h5 class="modal-title">Booking Confirmed!</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body text-center py-4">
                            <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                            <h4 class="mt-3">Thank You for Staying With Us!</h4>
                            <p class="mb-0">Your booking has been confirmed. Booking ID: #@ViewBag.BookingId</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>

            <script>
                document.addEventListener('DOMContentLoaded', function() {
                    var successModal = new bootstrap.Modal(document.getElementById('bookingSuccessModal'));
                    successModal.show();
                });
            </script>
        }

            // Activate the tab based on URL hash if present
            var hash = window.location.hash;
            if (hash) {
                $('.nav-tabs a[href="' + hash + '"]').tab('show');
            }

            // Update URL hash when tab changes
            $('.nav-tabs a').on('shown.bs.tab', function (e) {
                window.location.hash = e.target.hash;
            });
        });
    </script>
}