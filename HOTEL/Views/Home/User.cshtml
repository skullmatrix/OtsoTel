@model List<HotelWebsite.Models.User> 
@{
    ViewData["Title"] = "User Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- User Management Section -->
<section class="user-management-section">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 mb-3">User Management</h2>
            <p class="text-muted">Manage all users who signed in with Google.</p>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Photo</th>
                            <th>Name</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var user in Model)
                            {
                                <tr>
                                    <td><img src="@user.Photo" alt="User Photo" class="user-photo" /></td>
                                    <td>@user.Name</td>
                                    <td>@user.Email</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center">No users found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<!-- Styles for User Management Page -->
<style>
    .user-management-section {
        padding: 4rem 0;
    }

    .user-photo {
        width: 50px;
        height: 50px;
        border-radius: 50%;
    }

    .table {
        width: 100%;
        margin-bottom: 1rem;
        color: #212529;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, 0.05);
    }

    .table th,
    .table td {
        padding: 0.75rem;
        vertical-align: top;
        border-top: 1px solid #dee2e6;
    }

    .table thead th {
        vertical-align: bottom;
        border-bottom: 2px solid #dee2e6;
    }

    .text-center {
        text-align: center;
    }
</style>