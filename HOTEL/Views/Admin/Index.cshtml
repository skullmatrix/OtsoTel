@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0 rounded-lg">
                <div class="card-body p-4">
                    <h2 class="text-primary fw-bold mb-4">Admin Dashboard</h2>
                    <p class="lead">Welcome to The Matrix Hotel administration panel.</p>
                    <p>Use the sidebar menu to navigate through different management options.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- User Management Card -->
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-sm rounded-lg hover-lift transition-all">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
                            <i class="fas fa-users text-primary fs-4"></i>
                        </div>
                        <h3 class="h5 mb-0">User Management</h3>
                    </div>
                    <p class="text-muted">Manage user accounts, roles, and permissions.</p>
                    <a href="/Admin/UserManagement" class="btn btn-sm btn-outline-primary mt-2">
                        <i class="fas fa-arrow-right me-1"></i> Manage Users
                    </a>
                </div>
            </div>
        </div>

        <!-- Room Management Card -->
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-sm rounded-lg hover-lift transition-all">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
                            <i class="fas fa-bed text-primary fs-4"></i>
                        </div>
                        <h3 class="h5 mb-0">Room Management</h3>
                    </div>
                    <p class="text-muted">Manage room types, availability, and pricing.</p>
                    <a href="#" class="btn btn-sm btn-outline-primary mt-2">
                        <i class="fas fa-arrow-right me-1"></i> Manage Rooms
                    </a>
                </div>
            </div>
        </div>

        <!-- Booking Management Card -->
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-sm rounded-lg hover-lift transition-all">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
                            <i class="fas fa-calendar-check text-primary fs-4"></i>
                        </div>
                        <h3 class="h5 mb-0">Bookings</h3>
                    </div>
                    <p class="text-muted">View and manage current and upcoming bookings.</p>
                    <a href="#" class="btn btn-sm btn-outline-primary mt-2">
                        <i class="fas fa-arrow-right me-1"></i> Manage Bookings
                    </a>
                </div>
            </div>
        </div>

        <!-- Analytics Card -->
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-sm rounded-lg hover-lift transition-all">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
                            <i class="fas fa-chart-pie text-primary fs-4"></i>
                        </div>
                        <h3 class="h5 mb-0">Analytics</h3>
                    </div>
                    <p class="text-muted">View booking statistics and revenue reports.</p>
                    <a href="#" class="btn btn-sm btn-outline-primary mt-2">
                        <i class="fas fa-arrow-right me-1"></i> View Reports
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Registrations -->
    <div class="row mt-4">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded-lg">
                <div class="card-header bg-white p-4 border-0">
                    <h3 class="h5 mb-0">Recent User Registrations</h3>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>User</th>
                                    <th>Email</th>
                                    <th>Registered On</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="https://randomuser.me/api/portraits/men/32.jpg" width="40" height="40" class="rounded-circle me-3" alt="User">
                                            <span>John Smith</span>
                                        </div>
                                    </td>
                                    <td>john.smith@example.com</td>
                                    <td>Today</td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="https://randomuser.me/api/portraits/women/44.jpg" width="40" height="40" class="rounded-circle me-3" alt="User">
                                            <span>Sarah Johnson</span>
                                        </div>
                                    </td>
                                    <td>sarah.j@example.com</td>
                                    <td>Yesterday</td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="https://randomuser.me/api/portraits/men/67.jpg" width="40" height="40" class="rounded-circle me-3" alt="User">
                                            <span>Michael Brown</span>
                                        </div>
                                    </td>
                                    <td>m.brown@example.com</td>
                                    <td>2 days ago</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer bg-white border-0 p-3">
                    <a href="/Admin/UserManagement" class="btn btn-sm btn-link text-primary">View all users <i class="fas fa-arrow-right ms-1"></i></a>
                </div>
            </div>
        </div>

        <!-- Recent Bookings -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded-lg">
                <div class="card-header bg-white p-4 border-0">
                    <h3 class="h5 mb-0">Recent Bookings</h3>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Guest</th>
                                    <th>Room</th>
                                    <th>Check-in</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Alexander Pierce</td>
                                    <td>Premium Suite</td>
                                    <td>May 15, 2025</td>
                                    <td><span class="badge bg-warning">Pending</span></td>
                                </tr>
                                <tr>
                                    <td>Jennifer Wilson</td>
                                    <td>Deluxe Room</td>
                                    <td>May 12, 2025</td>
                                    <td><span class="badge bg-success">Confirmed</span></td>
                                </tr>
                                <tr>
                                    <td>Robert Johnson</td>
                                    <td>Standard Room</td>
                                    <td>May 10, 2025</td>
                                    <td><span class="badge bg-primary">Checked In</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer bg-white border-0 p-3">
                    <a href="#" class="btn btn-sm btn-link text-primary">View all bookings <i class="fas fa-arrow-right ms-1"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-lift:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.08) !important;
        transition: all 0.3s ease;
    }
</style>